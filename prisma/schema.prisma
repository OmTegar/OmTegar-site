generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  SUPERADMIN
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  image       String
  link        String?
  technology  String[] // Array of strings for tags like "React", "Node"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Certificate {
  id          String   @id @default(cuid())
  title       String
  description String
  image       String
  link        String?
  technology  String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
